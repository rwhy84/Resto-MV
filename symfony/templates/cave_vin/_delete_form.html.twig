<form method="post" action="{{ path('cave_vin_delete', {'id': cave_vin.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce vin?');">
    <input name="_method" type="hidden" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cave_vin.id) }}">
    <button class="btn">
        <i class="fas fa-trash-alt"></i>
    </button>
</form>
