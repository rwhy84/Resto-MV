{% extends 'base-admin.html.twig' %}

{% block title %}Gestion de la Cave
{% endblock %}
{% block h2 %}Gestion de la Cave
{% endblock %}
{% block linkPerso %} "{{ path('cave') }}" {% endblock %}
{% block h3 %}Cave
{% endblock %}

{% block body %}

    <div class="showCont">
        <table class="table">
            <thead>
                <tr>

                    <th>Titre</th>
                    <th>Prix</th>

                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for cave_vin in cave_vins %}
                    <tr>
                        <td>{{ cave_vin.titre }}</td>
                        <td>{{ cave_vin.prix }}</td>
                        <td>
                            <a href="{{ path('cave_vin_edit', {'id': cave_vin.id}) }}">
