{% extends 'base-admin.html.twig' %}

{% block title %}Gestion des contacts{% endblock %}
{% block h2 %}Gestion des contacts{% endblock %}
{% block link %}"{{ path('contact') }}"{% endblock %}
{% block h3 %}contact{% endblock %}
{% block body %}

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>



                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_client in contact_clients %}
            <tr>

                <td>{{ contact_client.nom }}</td>
                <td>{{ contact_client.message }}</td>
                <td>
                    <a href="{{ path('contact_client_show', {'id': contact_client.id}) }}">show</a>
                    <a href="{{ path('contact_client_edit', {'id': contact_client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_client_new') }}">Create new</a>
{% endblock %}
