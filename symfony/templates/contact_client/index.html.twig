{% extends 'base-admin.html.twig' %}

{% block title %}Gestion des contacts
{% endblock %}
{% block h2 %}Gestion des contacts
{% endblock %}
{% block linkPerso %} "{{ path('contact') }}" {% endblock %}
{% block h3 %}contact
{% endblock %}
{% block body %}
    <h4>VOS MESSAGES</h4>

    <div class="showCont">
        <table class="CarteTab">
            <thead>
                <tr>

                    <th>Nom</th>


                    <th>Message</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for contact_client in contact_clients %}
                    <tr>

                        <td>{{ contact_client.nom }}</td>

                        <td>{{ contact_client.message }}</td>
                        <td>
                            {{ include('contact_client/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucun message</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
