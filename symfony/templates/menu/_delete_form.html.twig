<form method="post" action="{{ path('menu_delete', {'id': menu.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce plat?');">

    <input name="_method" type="hidden" value="DELETE">


    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ menu.id) }}">
    <button class="btn btnDel">
        <i class="fas fa-trash-alt"></i>SUPPRIMER</button>
</form>
