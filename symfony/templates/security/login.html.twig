{% block stylesheets %}<link rel="stylesheet" href="{{ asset('asset/css/login.css') }}" type="text/css">
{% endblock %}
{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}

    <div class="sectionHeader">

        <div class="hiddenCircle">
            <div class="topCircle">
                <div class="insideCircle">
                    <i class="fas fa-lock"></i>
                </div>
            </div>
        </div>

    </div>

    <section>

        <h3>VEUILLEZ VOUS IDENTIFIER</h3>

        <form action="{{ path('login') }}" method="post">

            <div class="inputContainer">
                <div class="backInput">

                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username ?? "" }}">

                </div>

                <div class="formTrue hidden" id="mailTrue">
                    <i class="far fa-check-circle"></i>
                </div>
                <div class="formFalse hidden" id="mailFalse">
                    <i class="fas fa-times"></i>
                </div>

            </div>

            <div class="inputContainer">
                <div class="backInput">

                    <label for="password">Password:</label>
                    <input id="password" name="_password" type="password">

                </div>

                <div class="formTrue hidden" id="mailTrue">
                    <i class="far fa-check-circle"></i>
                </div>
                <div class="formFalse hidden" id="mailFalse">
                    <i class="fas fa-times"></i>
                </div>

            </div>

            <!-- CSRF: CROSS SITE REQUEST FORGERY (ATTAQUES DE HACKER) -->
            <input
            type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {#
                                                                                    If you want to control the URL the user
                                                                                    is redirected to on success (more details below)
                                                                                    <input type="hidden" name="_target_path" value="/account" />
                                                                                #}

            <button class="btn" type="submit">
                <i class="far fa-paper-plane"></i>Login</button>
        </section>

        {% if (error ?? false) %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

    </form>


{% endblock %}
