{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" media="screen and (max-width: 991px)" href="{{ asset('asset/css/reservations-medium.css') }}" type="text/css">

    {% endblock %}

{% block title %}Réservations{% endblock %}

{% block body %}
<div class="headerCave carousel-inner">
<img class="d-block w-100" src="asset/img/reservation.jpg">
<div class="overlay"></div>
<div class="titrePage">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-3 title_header">Réservation</h1>
      </div>
    </div>
  </div>
</div>
</div>
</header>

    <main>

        <section>

            <div id="recapResa">

                <a href="#" id="dateRecap"><i class="far fa-calendar-alt"></i></a>
                <a href="#" id="heureRecap"><i class="far fa-clock"></i></a>
                <a href="#" id="nbClientsRecap"><i class="fas fa-users"></i></a>

            </div>

            <div id="calendar">

                <div class="daysHeader">

                    <ul id="large">
                        <li>Lundi</li>
                        <li>Mardi</li>
                        <li>Mercredi</li>
                        <li>Jeudi</li>
                        <li>Vendredi</li>
                        <li>Samedi</li>
                        <li>Dimanche</li>
                    </ul>

                    <ul id="medium">
                        <li>Lun.</li>
                        <li>Mar.</li>
                        <li>Mer.</li>
                        <li>Jeu.</li>
                        <li>Ven.</li>
                        <li>Sam.</li>
                        <li>Dim.</li>
                    </ul>

                </div>

                <div id="currentMonth"></div>

            </div>

            <form action="" id="formResa" class="hidden">

                <div id="selectHour" class="hidden">

                    <h4 class="txtLight">Sélectionnez l'heure à laquelle vous souhaitez réserver</h4>

                    <div class="selectHoursCont">

                        <select class="form-control" id="midi">
                            <option selected disabled>Déjeuner</option>
                            <option id="12h00" class="slctMidi" value="12h00">12h00</option>
                            <option id="12h15" class="slctMidi" value="12h15">12h15</option>
                            <option id="12h30" class="slctMidi" value="12h30">12h30</option>
                            <option id="12h45" class="slctMidi" value="12h45">12h45</option>
                            <option id="13h00" class="slctMidi" value="13h00">13h00</option>
                            <option id="13h15" class="slctMidi" value="13h15">13h15</option>
                            <option id="13h30" class="slctMidi" value="13h30">13h30</option>
                            <option id="13h45" class="slctMidi" value="13h45">13h45</option>
                            <option id="14h00" class="slctMidi" value="14h00">14h00</option>
                            <option id="14h15" class="slctMidi" value="14h15">14h15</option>
                            <option id="14h30" class="slctMidi" value="14h30">14h30</option>
                            </optgroup>
                        </select>

                        <select class="form-control" id="diner">
                            <option selected disabled>Dîner</option>
                            <option id="20h00" class="slctMidi" value="20h00">20h00</option>
                            <option id="20h15" class="slctMidi" value="20h15">20h15</option>
                            <option id="20h30" class="slctMidi" value="20h30">20h30</option>
                            <option id="20h45" class="slctMidi" value="20h45">20h45</option>
                            <option id="21h00" class="slctMidi" value="21h00">21h00</option>
                            <option id="21h15" class="slctMidi" value="21h15">21h15</option>
                            <option id="21h30" class="slctMidi" value="21h30">21h30</option>
                            <option id="21h45" class="slctMidi" value="21h45">21h45</option>
                            <option id="22h00" class="slctMidi" value="22h00">22h00</option>
                            <option id="22h15" class="slctMidi" value="22h15">22h15</option>
                            <option id="22h30" class="slctMidi" value="22h30">22h30</option>
                            <option id="22h45" class="slctMidi" value="22h45">22h45</option>
                            <option id="23h00" class="slctMidi" value="23h00">23h00</option>

                    </div>

                </div>

                <div id="moreEaters" class="hidden">

                    <h4 class="txtLight">Pour combien de personnes souhaitez-vous réserver?</h4>

                    <div id="eatersCont">

                        <button class="optionEaters" id="1 personne">
                            <p>1</p>
                        </button>
                        <button class="optionEaters" id="2 personnes">
                            <p>2</p>
                        </button>
                        <button class="optionEaters" id="3 personnes">
                            <p>3</p>
                        </button>
                        <button class="optionEaters" id="4 personnes">
                            <p>4</p>
                        </button>
                        <button class="optionEaters" id="5 personnes">
                            <p>5</p>
                        </button>
                        <button class="optionEaters" id="6 personnes">
                            <p>6</p>
                        </button>
                        <button class="optionEaters" id="7 personnes">
                            <p>7</p>
                        </button>
                        <button class="optionEaters" id="8 personnes">
                            <p>8</p>
                        </button>
                        <button class="optionEaters" id="9 personnes">
                            <p>9</p>
                        </button>
                        <button class="optionEaters" id="10 personnes">
                            <p>10</p>
                        </button>
                        <button class="optionEaters" id="11 personnes">
                            <p>11</p>
                        </button>
                        <button class="optionEaters" id="12 personnes">
                            <p>12</p>
                        </button>
                        <button class="optionEaters" id="13 personnes">
                            <p>13</p>
                        </button>
                        <button class="optionEaters" id="14 personnes">
                            <p>14</p>
                        </button>
                        <button class="optionEaters" id="15 personnes">
                            <p>15</p>
                        </button>

                    </div>
                </div>

                <input type="text" id="inputDate" name="date" class="hidden">

                <div class="publicInputs hidden">

                    <p>Les champs marqués d'un <abbr title="(obligatoire)" aria-hidden="true">*</abbr> sont
                        obligatoires.
                    </p>

                    <div class="flexForm">
                        <abbr title="(obligatoire)">*</abbr>
                        <input class="form-control" type="text" id="name" name="name" placeholder="Nom" required>
                    </div>

                    <br>

                    <div class="flexForm">
                        <abbr title="(obligatoire)">*</abbr>
                        <input class="form-control" type="tel" id="tel" name="tel" placeholder="N° de téléphone"
                            required>
                    </div>

                    <br>

                    <input class="form-control" type="email" name="email" id="email"
                        placeholder="Adresse email (24 caractères maximum)">
                    <br>

                    <textarea class="form-control" id="remarques" name="remarques"
                        placeholder="Demandes particulières"></textarea>

                    <br>

                    <button type="submit" class="btn btn-success">Réserver</button>

                </div>

            </form>

        </section>

    </main>

{% endblock %}
