{% extends 'base-admin.html.twig' %}

{% block title %}Upload index
{% endblock %}
{% block h2 %}Gestion de la galerie
{% endblock %}
{% block linkPerso %} "{{ path('galerie') }}" {% endblock %}
{% block h3 %}Galerie
{% endblock %}

{% block body %}
    <h4>Votre galerie</h4>

    <div class="editCont">
        <table class="CarteTab">
            <thead>
                <tr>

                    <th>Image</th>
                    <th>Titre</th>

                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for upload in uploads %}
                    <tr>

                        <td><img class="imageUploadGalerie" src="{{asset(upload.image)}}"></td>
                        <td>{{ upload.titre }}</td>

                        <td>
                            <a href="{{ path('upload_edit', {'id': upload.id}) }}">
                                <i class="far fa-edit hoverNot"></i>Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Aucune photo trouv√©e</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('upload_new') }}">
            <i class="fas fa-plus-circle"></i>Ajouter une photo</a>
    </div>
{% endblock %}
