{% extends 'base.html.twig' %}

{% block title %}Hello CarteController!{% endblock %}

{% block body %}

<div class="headerCave carousel-inner">
	<img class="d-block w-100 " src="asset/img/carte.jpg" alt="Cave a Vin">
	<div class="overlay"></div>
	<div class="titrePage">
		<div class="d-flex h-100 text-center align-items-center">
			<div class="w-100 text-white">
				<h1 class="display-3 title_header">Notre Carte</h1>
			</div>
		</div>
	</div>
</div>
</header>

<div class="container-fluid">
	<div class="row" style="width: 50%">
		{% for menu in menus %}
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-4 text-center"><img src="{{asset(menu.image) }}" alt="{{ menu.titre }}" />
				</div>
				<div class="col-md-4">
					<div class="row">
						<div class="col-md-12 text-center">{{ menu.titre }}
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">{{ menu.description }}
						</div>
					</div>
				</div>
				<div class="col-md-4 text-center">{{ menu.prix }}
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>

{% endblock %}